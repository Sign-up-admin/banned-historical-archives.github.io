{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "migration/PPOCRV3toV4.js"
  ],
  "exclude": [
    "node_modules",
    "backend/parser/pdf.js",
    "backend/parser/pdf.worker.js"
  ]
}
