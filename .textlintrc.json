{
  "filters": {},
  "rules": {
    "terminology": {
      "defaultTerms": false,
      "terms": {
        "GitHub": ["GitHub"],
        "Git": ["Git"],
        "npm": ["npm"],
        "Node.js": ["Node.js"],
        "TypeScript": ["TypeScript"],
        "JavaScript": ["JavaScript"],
        "React": ["React"],
        "Next.js": ["Next.js"],
        "Markdown": ["Markdown"],
        "Docker": ["Docker"],
        "Elasticsearch": ["Elasticsearch"],
        "API": ["API", "APIs"],
        "URL": ["URL", "URLs"],
        "HTML": ["HTML"],
        "CSS": ["CSS"],
        "JSON": ["json", "JSON"],
        "YAML": ["YAML"],
        "CI/CD": ["CI/CD"],
        "PR": ["PR", "Pull Request"],
        "UI": ["UI"],
        "UX": ["UX"],
        "OCR": ["OCR"],
        "PDF": ["PDF"],
        "EPUB": ["EPUB"],
        "indexes": ["indexes", "indices"],
        "VS Code": ["VS Code", "Visual Studio Code"],
        "website": ["website", "site"],
        "changelog": ["changelog", "change log", "Change Log"],
        "build system": ["build system", "build tool"],
        "ID": ["ID", "id"]
      }
    },
    "write-good": {
      "passive": false,
      "weasel": false,
      "adverb": false,
      "tooWordy": false,
      "cliches": false
    }
  },
  "plugins": [],
  "extensions": [
    ".md",
    ".markdown"
  ]
}

