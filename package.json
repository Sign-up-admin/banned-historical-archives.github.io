{
  "name": "banned-historical-archives.github.io",
  "version": "0.1.0",
  "description": "Banned Historical Archives - 数字历史档案馆",
  "type": "module",
  "main": "pages/index.tsx",
  "homepage": "https://banned-historical-archives.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/banned-historical-archives/banned-historical-archives.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/banned-historical-archives/banned-historical-archives.github.io/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "historical-archives",
    "digital-archive",
    "react",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "build-article-json": "ts-node --project ./tsconfig.build.json ./backend/build-article-json.ts",
    "build-indexes": "ts-node --project ./tsconfig.build.json ./backend/build-indexes.ts",
    "dev": "COMMIT_HASH=$(git rev-parse HEAD) next dev",
    "init-config": "ts-node --project ./tsconfig.build.json ./backend/init-sub-repository.ts config",
    "init-parsed": "ts-node --project ./tsconfig.build.json ./backend/init-sub-repository.ts parsed",
    "init-raw": "ts-node --project ./tsconfig.build.json ./backend/init-sub-repository.ts raw",
    "init-ocr_cache": "ts-node --project ./tsconfig.build.json ./backend/init-sub-repository ocr_cache",
    "init-ocr_patch": "ts-node --project ./tsconfig.build.json ./backend/init-sub-repository ocr_patch",
    "init-es": "ts-node --project ./tsconfig.build.json ./backend/init-es.ts",
    "reset-es": "ts-node --project ./tsconfig.build.json ./backend/init-es.ts reset",
    "hack-mui": "sed -i'' -e 's/switch/return;switch/g' node_modules/@mui/x-license/Watermark/Watermark.js",
    "build": "npm run hack-mui && next build",
    "build-txt": "ts-node --project ./tsconfig.build.json ./backend/build-txt.ts",
    "cp-pdfjs": "cp -r ./node_modules/pdfjs-dist ./public/",
    "postbuild": "ts-node --project ./tsconfig.build.json ./backend/build-sitemap.ts",
    "start": "npm run init-es && npx serve@latest out",
    "lint": "eslint . --max-warnings 100",
    "lint:fix": "eslint . --fix --max-warnings 100",
    "type-check": "tsc --noEmit --project tsconfig.json --skipLibCheck",
    "lint:docs": "npm run lint:docs:format && npm run lint:docs:links && npm run lint:docs:text",
    "lint:docs:format": "markdownlint \"**/*.md\" --ignore node_modules --ignore .git --ignore out --ignore parsed --ignore config --ignore raw --ignore ocr_cache --ignore ocr_patch",
    "lint:docs:links": "node scripts/check-markdown-links.js",
    "lint:docs:text": "textlint \"**/*.md\" --ignore-path .textlintignore",
    "lint:docs:fix": "markdownlint --fix \"**/*.md\" --ignore node_modules --ignore .git --ignore out --ignore parsed --ignore config --ignore raw --ignore ocr_cache --ignore ocr_patch",
    "prettier": "prettier -w .",
    "generate:docs": "ts-node --project ./tsconfig.build.json ./scripts/generate-docs.ts",
    "docs": "npm run generate:docs",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:profile": "next build --profile",
    "validate-env": "node scripts/validate-env.js"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@elastic/elasticsearch": "^8.5.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.7",
    "@mui/material": "^6.1.7",
    "@mui/system": "^6.1.7",
    "@mui/x-data-grid": "^7.22.2",
    "@mui/x-data-grid-pro": "^7.22.2",
    "@types/connect-timeout": "^0.0.36",
    "@types/diff": "^5.0.2",
    "axios": "^1.13.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dbffile-fix-decoding": "^1.8.1",
    "diff-match-patch": "^1.0.5",
    "dommatrix": "^1.0.3",
    "dotenv": "^17.2.3",
    "epub": "^1.2.1",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.3.2",
    "file-type": "^17.0.0",
    "file-type-cjs": "^1.0.7",
    "fs-extra": "^10.1.0",
    "iconv-lite": "^0.6.3",
    "image-size": "^1.2.1",
    "jsdom": "^20.0.0",
    "json5": "^2.2.2",
    "memo_file": "^1.1.0",
    "mysql2": "^3.15.3",
    "next": "^15.0.3",
    "next-sitemap": "^4.2.3",
    "node-fetch": "^2.6.7",
    "pdf-parse": "^1.1.1",
    "pdf.js": "^0.1.0",
    "pdfjs-dist": "^5.4.394",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-pdf": "^10.2.0",
    "remark-gfm": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.7",
    "uuid": "^9.0.0",
    "vitest": "^4.0.0",
    "web-streams-polyfill": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-syntax-export-default-from": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@next/bundle-analyzer": "^16.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.19",
    "@types/diff-match-patch": "^1.0.32",
    "@types/express": "^4.17.25",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.0.0",
    "@types/react-pdf": "^6.2.0",
    "@types/uuid": "^8.3.4",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.4",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "markdown-link-check": "^3.14.2",
    "markdownlint-cli": "^0.46.0",
    "prettier": "^3.4.2",
    "react-docgen-typescript": "^2.2.2",
    "textlint": "^15.4.0",
    "textlint-rule-terminology": "^5.2.16",
    "textlint-rule-write-good": "^2.0.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^5.0.1"
  }
}
